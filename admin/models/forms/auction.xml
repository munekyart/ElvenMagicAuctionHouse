<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="auction.form" addfieldpath="/administrator/components/com_serials/models/fields">

		<field name="auctionID"
				alias="auctionID"
				label="SERIALS_FIELD_AUCTIONID"
				filter="INT"
				type="cktext"
				validate="default"
				required="true"
				class="validate[required]"/>

		<field name="owner"
				alias="owner"
				label="SERIALS_FIELD_OWNER"
				filter="STRING"
				type="cktext"/>

		<field name="hrsLeft"
				alias="hrsLeft"
				label="SERIALS_FIELD_HRSLEFT"
				filter="INT"
				type="cktext"/>

		<field name="bidPrice"
				alias="bidPrice"
				label="SERIALS_FIELD_BIDPRICE"
				filter="INT"
				type="cktext"/>

		<field name="buyoutPrice"
				alias="buyoutPrice"
				label="SERIALS_FIELD_BUYOUTPRICE"
				filter="INT"
				type="cktext"/>

		<field name="currentBidOf"
				alias="currentBidOf"
				label="SERIALS_FIELD_CURRENTBIDOF"
				filter="STRING"
				type="cktext"/>

		<field name="datetime"
				alias="datetime"
				label="SERIALS_FIELD_AUCTIONDATETIME"
				filter="STRING"
				type="cktext"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_serials/models/fields">

		<field name="search_search"
				type="cksearch"
				placeholder="SERIALS_FILTER_NULL_OWNER_CURRENTBIDOF_AUCTIONDATETIME"
				label="SERIALS_JSEARCH_OWNER_CURRENTBIDOF_AUCTIONDATETIME"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_serials/models/fields">

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>