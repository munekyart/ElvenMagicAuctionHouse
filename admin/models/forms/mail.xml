<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="mail.form" addfieldpath="/administrator/components/com_serials/models/fields">

		<field name="mailID"
				alias="mailID"
				label="SERIALS_FIELD_MAILID"
				filter="INT"
				type="cktext"
				validate="numeric"
				ruleInstance="numeric_2952"
				class="validate[custom[numeric_2952]]"/>

		<field name="toTheUser"
				alias="toTheUser"
				label="SERIALS_FIELD_TOTHEUSER"
				filter="INT"
				type="cktext"/>

		<field name="mailHeader"
				alias="mailHeader"
				label="SERIALS_FIELD_MAILHEADER"
				filter="STRING"
				type="cktext"/>

		<field name="mailMessage"
				alias="mailMessage"
				label="SERIALS_FIELD_MAILMESSAGE"
				filter="STRING"
				type="cktext"/>

		<field name="itemIDAttached"
				alias="itemIDAttached"
				label="SERIALS_FIELD_ITEMIDATTACHED"
				filter="INT"
				type="cktext"/>

		<field name="itemRefID"
				alias="itemRefID"
				label="SERIALS_FIELD_ITEMREFID"
				filter="INT"
				type="cktext"/>

		<field name="goldsAttached"
				alias="goldsAttached"
				label="SERIALS_FIELD_GOLDSATTACHED"
				filter="INT"
				type="cktext"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_serials/models/fields">

		<field name="search_search"
				type="cksearch"
				placeholder="SERIALS_FILTER_NULL_MAILHEADER_MAILMESSAGE"
				label="SERIALS_JSEARCH_MAILHEADER_MAILMESSAGE"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_serials/models/fields">

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>